<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Black border -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Optional padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
