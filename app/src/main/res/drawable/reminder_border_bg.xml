<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Card color can be overridden dynamically in code -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional subtle border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional shadow spacing look -->
    <padding
        android:left="6dp"
        android:top="4dp"
        android:right="6dp"
        android:bottom="8dp" />
</shape>

